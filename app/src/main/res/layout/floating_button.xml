<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/floatingButton"
        android:layout_marginTop="80dp"
        android:layout_marginStart="0dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/baseline_add_24"
        android:elevation="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/baseline_auto_fix_high_24"
            android:elevation="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/baseline_auto_fix_normal_24"
            android:elevation="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/baseline_auto_graph_24"
            android:elevation="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/baseline_back_hand_24"
            android:elevation="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/baseline_beach_access_24"
            android:elevation="5dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/baseline_bolt_24"
            android:elevation="5dp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_border" />

</FrameLayout>
